<div class="__uploader">
  <div class="uploader__heading">
    <h2>Compress files using node (zlib, brotli, dflate)</h2>
  </div>

  <div class="uploadInput">
    <div class="upload__icon">
      <img src="images/upload.svg" alt="upload icon" />
    </div>
    <form action="/" method="post" enctype="multipart/form-data">
      <input
        class="__input"
        type="file"
        name="file"
        id="file"
        multiple
        required
      />
      <input type="submit" value="Upload" class="__btn" />
    </form>
  </div>
</div>
