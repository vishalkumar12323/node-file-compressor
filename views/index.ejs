<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>

  <body>
    <div id="root">
      <%- include('./partials/header.ejs') %>
      <div class="__container">
        <%- include('./upload.ejs') %> <% if (locals.files) { %>
        <div class="__content">
          <div class="side__bar">
            <ul class="files__list">
              <% locals.files.forEach(file=> { %>
              <li class="file__item"><%= file.name %></li>
              <% }) %>
            </ul>
          </div>
          <div class="main__content"></div>
        </div>
        <% } else { %>
        <div class="no__content">
          <h2 class="uploader__heading">There are no files.</h2>
        </div>
        <%} %>
      </div>
    </div>
    <%- include('./partials/footer.ejs') %>
  </body>

  <script src="scripts/script.js"></script>
</html>
